@model IEnumerable<Izakayamvc.ViewModels.Vms.ReservationVM>

@{
    ViewBag.Title = "TodayBranch02Reservation";
}

<h2 style="text-align:center">2號店當日訂位表</h2>

<div class="text-end">
    <p>
        <a href="@Url.Action("CreateBranch02Reservation", "CalendarReservations")" class="btn btn-sm btn-outline-success">
            <i class="fa-solid fa-plus"></i>
            新增訂位
        </a>
    </p>
</div>
<div class="calendar">
    @foreach (var item in Model)
    {
        <div class="day">
            <div class="date">@item.ReservationTime.Month 月 @item.ReservationTime.Day 號</div>
            <div class="events">
                <div class="event">
                    <span id="name_@item.Id">@Html.DisplayNameFor(model => model.Name): @item.Name</span>
                    <span id="qty_@item.Id">@Html.DisplayNameFor(model => model.Qty): @item.Qty 位</span>
                    <span id="time_@item.Id">@Html.DisplayNameFor(model => model.ReservationTime): @item.ReservationTime.ToShortTimeString()</span>
                    <span id="status_@item.Id">@Html.DisplayNameFor(model => model.Status): @item.Status</span>
                    <span id="branch_@item.Id">@Html.DisplayNameFor(model => model.BranchId): @item.BranchId</span>
                    <span id="seat_@item.Id">@Html.DisplayNameFor(model => model.SeatId): @item.SeatId</span>
                </div>
                <!-- Add more event details if needed -->
            </div>
            <div>
                <a href="@Url.Action("EditReservation", "CalendarReservations",  new { Id = item.Id, returnUrl = @Url.Content("~/CalendarReservations/TodayBranch02Reservation") })" class="btn btn-sm btn-outline-primary">
                    <i class="fa-solid fa-pencil"></i>
                    編輯
                </a>
                <a href="@Url.Action("DeleteTheDayReservation", "CalendarReservations",  new { reservationId = item.Id, returnUrl = @Url.Content("~/CalendarReservations/TodayBranch02Reservation") + "?date=" + item.ReservationTime.Year + "/" + item.ReservationTime.Month + "/" + item.ReservationTime.Day})" class="btn btn-sm btn-outline-danger">
                    <i class="fa-solid fa-delete-left"></i>
                    刪除
                </a>
                <button class="btn btn-sm btn-outline-secondary toggle-button" data-id="@item.Id">
                    <i class="fa-solid fa-chair"></i>
                    就位
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add a click event listener to each toggle button
        document.querySelectorAll('.toggle-button').forEach(function(button) {
            button.addEventListener('click', function() {
                // Get the data-id attribute to identify the corresponding event
                var eventId = button.getAttribute('data-id');

                // Toggle the text-decoration style of each span element with the corresponding ID
                ['name', 'qty', 'time', 'status', 'branch', 'seat'].forEach(function(field) {
                    var spanId = field + '_' + eventId;
                    var span = document.getElementById(spanId);
                    if (span) {
                        if (span.style.textDecoration === 'line-through') {
                            span.style.textDecoration = '';
                            span.style.fontWeight = '';
                        } else {
                            span.style.textDecoration = 'line-through';
                            span.style.fontWeight = 'bold'; // 設置為粗體
                        }
                    }
                });
            });
        });
    </script>
}

@section CSS{
    <style>
        .calendar {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 5px;
        }

        .day {
            position: relative;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
            overflow: hidden;
        }

        .date {
            font-weight: bold;
        }

        .events {
            margin-top: 10px;
        }

        .event {
            margin: 5px 0;
        }

            .event span {
                display: block;
            }


        .delete-link {
            color: red; /* 設置文本顏色為紅色 */
            font-weight: bold; /* 設置粗體 */
            text-decoration: none; /* 移除下劃線 */
        }

            .delete-link:hover {
                text-decoration: underline; /* 滑鼠懸停時添加下劃線效果 */
            }
    </style>
}